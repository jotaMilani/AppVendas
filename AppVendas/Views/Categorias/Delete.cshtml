@model AppVendas.Models.Categoria

@{
    ViewData["Title"] = "Deletar";
}

<div class="d-flex justify-content-between my-5 align-items-center">
    <span class="display-6 w-75 justify-content-center">Cadastro de Categorias</span>
</div>

<h3>Tem certeza que deseja deletar esse registro?</h3>
<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoriaNome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoriaNome)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoriaId" />
        <input type="submit" value="Deletar" class="btn btn-outline-danger mt-3 px-3 py-1 me-3" /> 
        <a asp-action="Index" class="btn btn-outline-info aling-items-center px-3 mt-3 ms-3 justify-content-center py-1"><ion-icon name="arrow-back-sharp" class="me-2"></ion-icon>Voltar</a>
    </form>
</div>
