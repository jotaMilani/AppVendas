@model AppVendas.Models.Categoria

@{
    ViewData["Title"] = "Adicionar Categoria";
}


<div class="d-flex justify-content-between my-5 align-items-center">
    <span class="display-6 w-75 justify-content-center">Cadastro de Categorias</span>
</div>


<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label asp-for="CategoriaNome" class="control-label"></label>
                <input asp-for="CategoriaNome" class="form-control" />
                <span asp-validation-for="CategoriaNome" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-4">

            <div class="form-group">
                <button type="submit" class="btn btn-outline-success d-flex align-items-center px-2 mt-1 justify-content-center py-2 ">
                    <ion-icon name="save" class="me-2"></ion-icon> Salvar
                </button>
            </div>
        </div>
        <div class="col-4"></div>
        <div class="col-4">
            <a asp-action="Index" class="btn btn-outline-info align-items-center px-2 mt-1 justify-content-center py-2 ">
                <ion-icon name="arrow-back" class="me-2"></ion-icon> Voltar
            </a>
        </div>
    </div>
</form>







@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
