@model AppVendas.Models.Categoria

@{
    ViewData["Title"] = "Adicionar Categoria";
}


<div class="d-flex justify-content-between my-5 align-items-center">
    <span class="display-6 w-75 justify-content-center">Cadastro de Categorias</span>
</div>


<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label asp-for="CategoriaNome" class="control-label"></label>
                <input asp-for="CategoriaNome" class="form-control" />
                <span asp-validation-for="CategoriaNome" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-4">


            <div class="form-group">
                <button type="submit" class="btn btn-primary d-flex align-items-center px-3 mt-3 justify-content-center py-1">
                    Salvar<ion-icon name="save-sharp" class="ms-2"></ion-icon>
                </button>
            </div>
            <a asp-action="Index" class="btn btn-outline-info aling-items-center px-3 mt-3 ms-3 justify-content-center py-1"><ion-icon name="arrow-back-sharp" class="me-2"></ion-icon>Voltar</a>
        </div>
        <div class="col-4"></div>
        <div class="col-4">
        </div>
    </div>

</form>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
