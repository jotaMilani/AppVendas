@model AppVendas.Models.Produto

@{
    ViewData["Title"] = "Deletar";
}

<h1>Deletar</h1>

<h3>Tem Certeza Que Deseja Deletar Esse Produto?</h3>
<div>
    <h4>Produto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProdutoNome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProdutoNome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Valor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.QtadeEstoque)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.QtadeEstoque)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CadastroAtivo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CadastroAtivo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categoria.CategoriaNome)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ProdutoId" />
        <input type="submit" value="Deletar" class="btn btn-outline-danger mt-3 px-3 py-1 me-3" />
        <a asp-action="Index" class="btn btn-outline-info aling-items-center px-3 mt-3 ms-3 justify-content-center py-1"><ion-icon name="arrow-back-sharp" class="me-2"></ion-icon>Voltar</a>
    </form>
</div>
