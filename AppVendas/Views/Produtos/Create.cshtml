@model AppVendas.Models.Produto

@{
    ViewData["Title"] = "Cadastrar Produto";
}

<div class="d-flex justify-content-between my-5 align-items-center">
    <span class="display-6 w-75 justify-content-center">Cadastro de Produtos</span>

</div>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="ProdutoNome" class="control-label"></label>
                <input asp-for="ProdutoNome" class="form-control" />
                <span asp-validation-for="ProdutoNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QtadeEstoque" class="control-label"></label>
                <input asp-for="QtadeEstoque" class="form-control" />
                <span asp-validation-for="QtadeEstoque" class="text-danger"></span>
            </div>
        </div>
        <label class="form-check-label">
            <input class="form-check-input" asp-for="CadastroAtivo" /> @Html.DisplayNameFor(model => model.CadastroAtivo)
        </label>

        <div class="form-group">
            <label asp-for="ProdutoId" class="control-label"></label>
            <select asp-for="ProdutoId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
        </div>
        <div class="row">
            <div class="col-4">

                <div class="form-group">
                    <button type="submit" class="btn btn-outline-success d-flex align-items-center px-2 mt-1 justify-content-center py-2 ">
                        <ion-icon name="save" class="me-2"></ion-icon> Salvar
                    </button>
                </div>
            </div>
            <div class="col-4"></div>
            <div class="col-4">
                <a asp-action="Index" class="btn btn-outline-info align-items-center px-2 mt-1 justify-content-center py-2 ">
                    <ion-icon name="arrow-back" class="me-2"></ion-icon> Voltar
                </a>
            </div>
        </div>

</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

