@model AppVendas.Models.Produto

@{
    ViewData["Title"] = "Editar";
}

<div class="d-flex justify-content-between my-5 align-items-center">
    <span class="display-6 w-75 justify-content-center">Cadastro de Produtos</span>
</div>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProdutoId" />
            <div class="form-group">
                <label asp-for="ProdutoNome" class="control-label"></label>
                <input asp-for="ProdutoNome" class="form-control" />
                <span asp-validation-for="ProdutoNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QtadeEstoque" class="control-label"></label>
                <input asp-for="QtadeEstoque" class="form-control" />
                <span asp-validation-for="QtadeEstoque" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CadastroAtivo" /> @Html.DisplayNameFor(model => model.CadastroAtivo)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CategoriaID" class="control-label"></label>
                <select asp-for="CategoriaID" class="form-control" asp-items="ViewBag.CategoriaID"></select>
                <span asp-validation-for="CategoriaID" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-4">


                    <div class="form-group">
                        <button type="submit" class="btn btn-primary d-flex align-items-center px-3 mt-3 justify-content-center py-1">
                            Salvar<ion-icon name="save-sharp" class="ms-2"></ion-icon>
                        </button>
                    </div>
                    <a asp-action="Index" class="btn btn-outline-info aling-items-center px-3 mt-3 ms-3 justify-content-center py-1"><ion-icon name="arrow-back-sharp" class="me-2"></ion-icon>Voltar</a>
                </div>
                <div class="col-4"></div>
                <div class="col-4">
                </div>
            </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
